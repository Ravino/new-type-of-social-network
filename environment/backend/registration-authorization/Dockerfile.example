FROM node:14

ENV TARANTOOL_PORT=
ENV TARANTOOL_HOST=
ENV TARANTOOL_USER_NAME=
ENV TARANTOOL_USER_PASSWORD=
ENV VKONTAKTE_CLIENT_ID=
ENV VKONTAKTE_CLIENT_SECRET=
ENV VKONTAKTE_CALLBACK_URL=
ENV VKONTAKTE_SCOPE=
ENV VKONTAKTE_PROFILE_FIELDS=


RUN mkdir /www && mkdir /www/app
WORKDIR /www/app
COPY package.json .
RUN npm i
COPY . .
RUN npm run build
RUN rm -R src
CMD ["npm", "start"]
